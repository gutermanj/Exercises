<h1>Add a new contact</h1>

<form action="/contacts" method="POST">
  <div>
    <label for="name">Name</label>
    <input type="text" name="contact[name]" id="contact_name">
  </div>

  <div>
    <label for="address">Address</label>
    <textarea name="contact[address]" id="contact_address"></textarea>
  </div>

  <div>
    <label for="phonenumber">Phone number</label>
    <input type="tel" name="contact[phonenumber]" id="contact_phone">
  </div>

  <div>
    <label for="email">Email</label>
    <input type="email" name="contact[email]" id="contact_email">
  </div>

   <button type="submit">Add this contact</button>

   <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
</form>