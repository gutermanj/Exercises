<h1>Create An Auction</h1>

<%= form_for [@product] do |f| %>
	<%= f.label :title %>
	<%= f.text_field :title %>

	<%= f.label :description %>
	<%= f.text_field :description %>

	<%= f.label :deadline %>
	<%= f.datetime_field :deadline %>

	<%= f.label :email %>
	<%= email_field_tag(:email, params[:email]) %>

	<%= f.label :bid %>
	<%= f.number_field :bid %>

	<%= f.submit 'Save' %>

 <% end %>