<% else %>



<body class="signed-in-body">

	<div class="container">
		<div class="row">
			 <div class="col-sm-4">
					<span class="first-half">Aim</span><span class="second-half">uzer</span>
					<br>
						<span style="color: #ABABAB;">Let's Discover, Together</span>
							
				</div> <!-- col-lg-4 -->

			<div class="col-sm-8">

			</div>
			
		</div> <!-- row -->
			<hr style="border-color: #3B5998;">
		<div class="row">
			<div class="col-sm-8 content-background">
				<div>
					<h3 class="fake-player"><i class="glyphicon glyphicon-play play-btn" ></i></h3>
				</div>

				<div>
					<h3 class="fake-player"><i class="glyphicon glyphicon-play play-btn" ></i></h3>
				</div>

				<div>
					<h3 class="fake-player"><i class="glyphicon glyphicon-play play-btn" ></i></h3>
				</div>

				<div>
					<h3 class="fake-player"><i class="glyphicon glyphicon-play play-btn" ></i></h3>
				</div>
			</div> <!-- col-sm-8 -->


			<div class="col-sm-4">

			</div> <!-- col-sm-4 -->


		</div> <!-- row -->


	</div> <!-- container -->
</body>

<% end %>

<!-- ============ IF SOMEONE IS SIGNED IN ===========-->

</html>








