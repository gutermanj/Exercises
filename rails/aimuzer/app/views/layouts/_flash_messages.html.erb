<% flash.each do |type, message| %>
  
    <% if notice %>
    <div class="alert alert-success <%= bootstrap_class_for(type) %> fade in" style="width: 40%; margin-left: 30%; position: absolute; z-index: 100; text-align: center;">
    <button class="close" data-dismiss="alert">×</button>
    	<%= notice %>
    	<% end %>

    	<% if alert %>
    	<div class="alert alert-danger <%= bootstrap_class_for(type) %> fade in" style="width: 40%; margin-left: 30%; position: absolute; z-index: 100; text-align: center;">
    <button class="close" data-dismiss="alert">×</button>
    	<%= alert %>
    	<% end %>


  </div>

<% end %>