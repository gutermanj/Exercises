<div class="container">

<h2>Sign up</h2>

<hr>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { multipart: true }) do |f| %>
  <%= devise_error_messages! %>

 
<div class="form-group">
    <%= f.label :first_name, :class => 'control-label' %>
    
    <div style="width: 35%;">
    <%= f.text_field :first_name, :class => 'form-control', autofocus: true %>
  </div>
  </div>
  <br>  


<div class="form-group">
    <%= f.label :last_name, :class => 'control-label' %>
    
    <div style="width: 35%;">
    <%= f.text_field :last_name, :class => 'form-control', autofocus: true %>
  </div>
  </div>
  <br>

  <div class="form-group">
    <%= f.label :zipcode, :class => 'control-label' %>
    
    <div style="width: 35%;">
    <%= f.number_field :zipcode, :class => 'form-control', autofocus: true %>
  </div>
  </div>
  <br>

     <div class="form-group">
    <%= f.label :email, :class => 'control-label' %>
    
    <div style="width: 35%;">
    <%= f.email_field :email, :class => 'form-control', autofocus: true %>
  </div>
  </div>
  <br>

  <div class="form-group">
    <%= f.label :password, :class => 'control-label' %>
    
    <div style="width: 35%;">
    <%= f.password_field :password, :class => 'form-control', autocomplete: "off" %>
  </div>
  </div>
  <br>



  <div class="form-group">
    <%= f.label :password_confirmation, :class => 'control-label' %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <div style="width: 35%;">
    <%= f.password_field :password_confirmation, :class => 'form-control', autocomplete: "off" %>
  </div>
  </div>


  <%= f.file_field :avatar %>



  <div class="actions">
    <%= f.submit "Sign up", :class => 'btn btn-info' %>
  </div>


<% end %>

<br>

<%= render "devise/shared/links" %>

</div>
